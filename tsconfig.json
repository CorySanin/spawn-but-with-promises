{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "NodeNext",
    "target": "ESNext",

    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "./",
    "outDir": "./distribution",
    "declaration": true,
  },
  "exclude": ["**/*.spec.ts", "distribution", "test"]
}
